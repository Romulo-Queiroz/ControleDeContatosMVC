@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de apagar contato";
}
<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a role="button" class="btn btn-primary btn-block" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a role="button" class="btn btn-danger btn-block" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>