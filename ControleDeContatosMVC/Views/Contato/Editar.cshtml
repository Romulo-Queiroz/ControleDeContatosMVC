@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">

    <h1 class="display-4">Editar contato</h1>

</div>

<form>
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" placeholder="Digite o nome do contato">
  </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" placeholder="Digite o e-mail do contato">
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="email" class="form-control" placeholder="Digite o celular do contato">
    </div>

  <button type="submit" class="btn btn-primary btn-block">Editar</button>
  <a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>